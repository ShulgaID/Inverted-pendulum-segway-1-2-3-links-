<mujoco>

	<option timestep="0.001"/>
	<option gravity="0 0 -9.8"/>

	<asset>
		<texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="0.5 0.5 0.5" width="265" height="256"/>
		<texture name="grid" type="2d" builtin="checker" rgb1="0.1 0.1 0.1" rgb2="0.6 0.6 0.6" width="300" height="300"/>
		<material name="grid" texture="grid" texrepeat="10 10" reflectance="0.2"/>
	</asset>

    <worldbody>
        <body name = 'floor' pos = '0 0 0'>
            <geom type = "plane" size = '100 100 1' material="grid"/>
        </body>

<!-- Тележка -->
        <body pos = '0 0 0.75'>
            <joint name = 'cart' type = 'slide' axis = '0 1 0' />
            <geom type = 'box' size = '1.5 2 0.75'/>

<!-- Маятник -->
            <body name = 'pendulum' pos = '0 0 0.9'>
                <geom type = 'cylinder' size = '0.5 0.2'/>
                <body name = 'base' euler = '0 90 0'>  
                    <joint type = 'hinge' pos = '-0.3 0 0'/>
                    <geom type = 'cylinder' size = '0.2 0.2' pos = '-0.3 0 0' />

<!-- Первое звено -->
                    <body name = 'firstLink'>
                        <geom type = 'cylinder' size ='0.2 1' euler = '0 90 0' pos = '-1.2 0 0'/>
                        <body name = 'firstJoint'>
                            <joint type = 'hinge' pos = '-2.2 0 0'/>
                            <geom type = 'cylinder' size = '0.2 0.2' pos = '-2.2 0 0'/>
                            <site name = "firstSite" pos = "-2.2 0 0" size = "0.25" rgba="0 0 1 1"/> <!-- Для снятия данных положения -->

<!-- Второе звено -->
                                <body name = 'secondLink'>
                                    <geom type = 'cylinder' size ='0.2 1' euler = '0 90 0' pos = '-3.2 0 0'/>
                                    <body name = 'secondJoint'>
                                        <joint type = 'hinge' pos = '-4.2 0 0'/>
                                        <geom type = 'cylinder' size = '0.2 0.2' pos = '-4.2 0 0'/>
                                        <site name = "secondSite" pos = "-4.2 0 0" size = "0.25" rgba="0 1 0 1"/> <!-- Для снятия данных положения -->

<!-- Третье звено -->
                                        <body name = 'thirdLink'>
                                            <geom type = 'cylinder' size ='0.2 1' euler = '0 90 0' pos = '-5.2 0 0'/>
                                            <body name = 'lastJoint'>
                                                <geom type = 'sphere' size = '0.25' pos = '-6.2 0 0'/>
                                                <joint type = 'hinge' pos = '-6.2 0 0'/>
                                                <site name = "lastSite" pos = "-6.2 0 0" size = "0.25" rgba="1 0 0 1"/> <!-- Для снятия данных положения -->
                                            </body>
                                        </body>
                                    </body>
                                </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

<!-- Управление тележкой -->
	<actuator>
        <motor name = "cartControl" joint="cart" gear = '100 0 0 0 0 0' ctrlrange="-10000 10000"/>
    </actuator>

</mujoco>